{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('product_new') }}">New Product</a>

    {% for product in products %}
        <div>
            <h3>{{ product.name }}</h3>
            {{ product.description }}
            {{ product.price }}
            {{ product.createdAt|date('Y-m-d') }}
        </div>
    {% endfor %}
{% endblock %}